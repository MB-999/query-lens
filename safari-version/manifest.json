{
  "manifest_version": 2,
  "name": "QueryLens",
  "version": "1.0.0",
  "description": "View and manipulate URL query parameters for debugging",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "QueryLens"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}