{
  "manifest_version": 3,
  "name": "QueryLens",
  "version": "1.0.0",
  "description": "View and manipulate URL query parameters",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QueryLens",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}